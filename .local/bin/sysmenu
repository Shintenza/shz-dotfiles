#!/bin/bash

options=(" Poweroff" " Reboot" " Logout" "󰒲 Suspend")
choice=$(printf '%s\n' "${options[@]}" | dmenu -F -i -c -g 1 -l ${#options[@]})


if [ "$choice" == "${options[0]}" ]; then
    poweroff
elif [ "$choice" == "${options[1]}" ]; then
    reboot
elif [ "$choice" == "${options[2]}" ]; then
    killall dwm
elif [ "$choice" == "${options[3]}" ]; then
    systemctl suspend 
else 
    exit 1
fi
